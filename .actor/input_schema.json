{
    "title": "Scrape data from a web page",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "days_reminder_long": {
            "title": "First reminder time delta (days)",
            "type": "integer",
            "description": "How many days before the resource expiration to send the FIRST notification notifications.",
            "editor": "number",
            "prefill": 30
        },
        "days_reminder_short": {
            "title": "Second reminder time delta (days)",
            "type": "integer",
            "description": "How many days before the resource expiration to send the SECOND notification notifications.",
            "editor": "number",
            "prefill": 14
        },
        "days_urgent": {
            "title": "Urgent notification time delta (days)",
            "type": "integer",
            "description": "How many days before the resource expiration to start sending URGENT notifications every day.",
            "editor": "number",
            "prefill": 3
        },
        "slack_bot_token": {
            "title": "Slack bot key",
            "type": "string",
            "description": "",
            "editor": "textfield",
            "isSecret": true
        },
        "slack_channel_id": {
            "title": "Slack channel id",
            "type": "string",
            "description": "",
            "editor": "textfield"
        },
        "aws_access_key_id": {
            "title": "AWS access key ID",
            "type": "string",
            "description": "",
            "editor": "textfield",
            "isSecret": true
        },
        "aws_secret_access_key": {
            "title": "AWS secret key",
            "type": "string",
            "description": "",
            "editor": "textfield",
            "isSecret": true
        },
        "aws_account_region": {
            "title": "AWS account region",
            "type": "string",
            "description": "",
            "editor": "textfield",
            "prefill": "us-east-1"
        },
        "store_name": {
            "title": "KV store",
            "type": "string",
            "description": "Select a kv store",
            "resourceType": "keyValueStore"
        },

        "ignored_uuids": {
            "title": "UUIDs of resources to ignore (not to send notificatons about)",
            "type": "array",
            "editor": "stringList",
            "description": ""
        },
        "default_owner": {
            "title": "Default resource owner ID (e-mail)",
            "type": "string",
            "description": "",
            "editor": "textfield"
        }
    },
    "required": ["days_urgent", "days_reminder_long", "days_reminder_short",
        "aws_access_key_id", "aws_secret_access_key", "slack_bot_token", "slack_channel_id", "aws_account_region", "store_name"]
}
